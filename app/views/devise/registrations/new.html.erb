<h2>Novo Usuário</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="form-group">
  <div class="field">
    E-mail:
    <br />
    <%= f.email_field :email, autofocus: true, :class => "form-control input-group" %>
  </div>
</div>
<div class="form-group">
  <div class="field">
    Senha:
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> Caracteres no mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :class => "form-control input-group" %>
  </div>
</div>

<div class="form-group">
  <div class="field">
    Confirmar Senha:
    <br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control input-group"%>
  </div>
</div>

  <div class="actions">
    <%= f.submit "Criar conta",:class => "btn btn-primary " %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
