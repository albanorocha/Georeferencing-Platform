<h1>Listing outdoors</h1>


<div class="table-responsive">     
<table class="table table table-hover">
  <thead>
    <tr>
      <th>Code</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @outdoors.each do |outdoor| %>
      <tr>
        <td><%= outdoor.code %></td>
        <td><%= outdoor.address %></td>
        <td><%= link_to 'Show', dashboard_outdoor_path(outdoor) %></td>
        <td><%= link_to 'Edit', edit_dashboard_outdoor_path(outdoor) %></td>
        <td><%= link_to 'Destroy', dashboard_outdoor_path(outdoor), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to 'New Outdoor', new_dashboard_outdoor_path, 'data-no-turbolink' => true %>

<%= javascript_tag do %>
  <% if @hash.empty? %>
    buildEmptyMap();
  <% else %>
    buildMap(<%= raw  @hash.to_json %>);
  <% end %>
<% end %>
