<%= form_for(@outdoor) do |f| %>
  <% if @outdoor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@outdoor.errors.count, "error") %> prohibited this outdoor from being saved:</h2>

      <ul>
      <% @outdoor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
   <div class="col-lg-6">
      <%= f.text_field :name, placeholder: 'Nome', class: 'form-control' %>
  </div>

  <div class="col-lg-6">
    <%= f.text_field :code, placeholder: 'Código', class: 'form-control' %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= f.text_area :description, placeholder: 'Descrição', class: 'form-control' %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= f.text_field :address, placeholder: 'Endereço', class: 'form-control' %>
  </div>
</div>


<%= f.hidden_field :latitude, placeholder: 'Latitude', class: 'form-control', :step => 'any' %>

<%= f.hidden_field :longitude, placeholder: 'Longitude', class: 'form-control', :step => 'any' %>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>
